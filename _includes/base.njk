    <style>
        * {
            box-sizing: border-box;
        }

        body {
            padding: 0;
            margin: 0;
            font-family: 'Atkinson Hyperlegible', sans-serif;
            font-size: 1.5em;
            height: 100vh;
            background-color: #01a4df;
        }

        header {
            text-align: center;
            background-color: #fdbd30;
            overflow: auto;
            padding: 20px;
        }

        section {
            background-color: #01a4df;
            overflow: auto;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 10px 15px;
        }

        h1 {
            margin-bottom: 0;
            margin-top: 0;
            text-shadow: 3px 3px 0 #01a4df;
            color: white;
        }

        a {
            color: black;
            font-weight: bold;
        }

        .featured {
            background-color: #fdbd30;
        }

        a:hover {
            text-decoration: none;
        }

        footer {
            text-align: center;
            margin-bottom: 20px;
        }

        pre {
            padding: 10px;
            background-color: white;
        }

        details:hover {
            cursor: pointer;
        }

        iframe {
            width: 740px;
            max-width: 100%;
            height: 200px;
        }

        @media (max-width: 600px) {
            iframe {
                height: 100px;
            }
        }

        nav {
            display: flex;
            max-width: 720px;
            margin: 0 auto;
            justify-content: space-between;
            font-size: 0.9em;
            margin-top: 10px;
        }

        @media (max-width: 400px) {
            nav {
                margin-top: 0;
                flex-direction: column;
            }
        }

        .networkmap {
            border: 1px solid black;
            background-color: white;
            width: 100%;
            height: 600px;
        }

        .selected {
            font-size: 0.8em;
            margin: 20px 0;
        }

        #selected--container {
            display: none;
        }

        .posts {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-gap: 10px;
        }

        @media (max-width: 700px) {
            .posts {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 550px) {
            .posts {
                grid-template-columns: repeat(1, 1fr);
                grid-gap: 5px;
            }
        }

        .posts span {
            display: flex;
            align-items: center;
        }

        .posts span svg {
            width: 20px;
            height: 20px;
            margin-right: 3px;
        }

        .posts div {
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            border: 1px solid #fdbd30;
            padding: 10px 5px;
        }

        .banner {
            background-color: #01a4df;
            max-width: 600px;
            margin: 0 auto;
            padding: 10px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            border-radius: 10px;
            border: 4px solid white;
        }
    </style>

